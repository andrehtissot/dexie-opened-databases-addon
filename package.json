{
  "name": "dexie-opened-databases-addon",
  "version": "0.0.4",
  "description": "An addon for Dexie.js that keeps track of opened connections",
  "main": "dist/dexieOpenedDatabasesAddon.js",
  "module": "dist/dexieOpenedDatabasesAddon.es.js",
  "jsnext:main": "dist/dexieOpenedDatabasesAddon.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrehtissot/dexie-opened-databases-addon.git"
  },
  "keywords": [
    "indexeddb",
    "browser",
    "connections",
    "dexie"
  ],
  "author": "Andr√© Augusto Tissot <https://github.com/andrehtissot>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrehtissot/dexie-opened-databases-addon/issues"
  },
  "scripts": {
    "build": "just-build",
    "watch": "just-build --watch",
    "test": "npm run test:chrome",
    "test:debug": "karma start test/karma/karma.conf.chrome.js --log-level debug",
    "test:chrome": "npm run build dev && karma start test/karma/karma.conf.chrome.js --single-run",
    "test:firefox": "npm run build dev && karma start test/karma/karma.conf.firefox.js --single-run",
    "test:safari": "npm run build dev && karma start test/karma/karma.conf.safari.js --single-run"
  },
  "just-build": {
    "default": [
      "# Build all targets",
      "just-build release test"
    ],
    "dexie-orm": [
      "# Build the umd module",
      "rollup -c tools/build-configs/rollup.config.js",
      "babel --module-id DexieORMAddon dist/dexieOpenedDatabasesAddon.es.js -o dist/dexieOpenedDatabasesAddon.js --source-maps",
      "node tools/insertBanner.js dist/dexieOpenedDatabasesAddon.js dist/dexieOpenedDatabasesAddon.es.js",
      "node tools/replaceVersionAndDate.js dist/dexieOpenedDatabasesAddon.js dist/dexieOpenedDatabasesAddon.es.js",
      "eslint src"
    ],
    "release": [
      "# Build the umd module and minifies it.",
      "just-build dexie-orm",
      "uglifyjs dist/dexieOpenedDatabasesAddon.js -m -c -o dist/dexieOpenedDatabasesAddon.min.js --source-map \"filename='dist/dexieOpenedDatabasesAddon.min.js.map',includeSources='dist/dexieOpenedDatabasesAddon.js.map'\""
    ],
    "dev": [
      "# Build the umd module and the tests",
      "just-build dexie-orm test"
    ],
    "gzip": [
      "# Optionally gzip to find the size of the minified & gzipped version",
      "gzip dist/dexieOpenedDatabasesAddon.min.js -k -f -9"
    ],
    "test": [
      "# Build the test suite.",
      "rollup -c tools/build-configs/rollup.tests.config.js",
      "mkdir -p test/tmp/",
      "babel tools/tmp/rollup/tests.es.js -o test/tmp/tests.js --source-maps"
    ]
  },
  "engines": {
    "node": ">=9.3"
  },
  "homepage": "https://github.com/andrehtissot/dexie-opened-databases-addon/blob/master/README.md",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^4.19.1",
    "just-build": "^0.9.16",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-qunit": "^2.0.1",
    "karma-coverage": "^1.1.1",
    "qunit": "^2.6.0",
    "qunitjs": "^2.4.1",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "uglify-js": "^3.3.23"
  },
  "dependencies": {
    "dexie": "^2.0.3"
  }
}
